<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 그림자 효과 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40000000" /> <!-- 그림자 색 (25% 불투명) -->
            <corners android:radius="30dp" />
        </shape>
    </item>

    <!-- 실제 박스 -->
    <item android:left="0dp" android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- 배경 흰색 -->
            <stroke android:width="5dp" android:color="#000000"/> <!-- 테두리 -->
            <corners android:radius="30dp"/> <!-- 둥글게 -->
        </shape>
    </item>
</layer-list>
