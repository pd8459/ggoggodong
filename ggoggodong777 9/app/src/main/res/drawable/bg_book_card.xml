        android:startColor="#FFF8E1"
        android:endColor="#FFE082"
        android:angle="270" />

    <!-- 모서리 둥글게 -->
    <corners android:radius="12dp" />

    <!-- 그림자 느낌을 위한 패딩 (옵션) -->
